using System.Windows;
using MilkTeaShop.Presentation.ViewModels;

namespace MilkTeaShop.Presentation;

public partial class SettingsWindow : Window
{
    public SettingsWindow()
    {
        InitializeComponent();
        DataContext = new SettingsViewModel();
    }

    private void Close_Click(object sender, RoutedEventArgs e)
    {
        DialogResult = false;
        Close();
    }

    private void ViewSalesReport_Click(object sender, RoutedEventArgs e)
    {
        try
        {
            var salesReport = new SalesReportWindow();
            salesReport.Owner = this;
            salesReport.ShowDialog();
        }
        catch (System.Exception ex)
        {
            MessageBox.Show($"Lỗi mở Báo cáo Doanh thu: {ex.Message}", "Lỗi", 
                           MessageBoxButton.OK, MessageBoxImage.Error);
        }
    }

    private void CheckDatabaseHealth_Click(object sender, RoutedEventArgs e)
    {
        try
        {
            var dbHealth = new DatabaseHealthWindow();
            dbHealth.Owner = this;
            dbHealth.ShowDialog();
        }
        catch (System.Exception ex)
        {
            MessageBox.Show($"Lỗi mở Kiểm tra Database: {ex.Message}", "Lỗi", 
                           MessageBoxButton.OK, MessageBoxImage.Error);
        }
    }
}