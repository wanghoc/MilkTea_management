using MilkTeaShop.Domain.Interfaces;

namespace MilkTeaShop.Domain.Patterns.Decorator;

// Base decorators cho từng loại trà sữa
public class OriginalMilkTeaDecorator : DrinkDecorator
{
    public OriginalMilkTeaDecorator(IPriceable inner) : base(inner) { }
    public override decimal GetPrice() => Inner.GetPrice() + 35000m;
    public override string GetDescription() => "Trà sữa nguyên chất";
}

