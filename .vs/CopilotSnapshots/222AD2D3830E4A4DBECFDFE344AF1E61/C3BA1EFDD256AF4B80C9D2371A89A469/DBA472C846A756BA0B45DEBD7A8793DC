using MilkTeaShop.Domain.Interfaces;

namespace MilkTeaShop.Domain.Patterns.Decorator;

public class PearlTopping : DrinkDecorator
{
    public PearlTopping(IPriceable inner) : base(inner) { }
    public override decimal GetPrice() => base.GetPrice() + 5000m; // +5,000 VND
    public override string GetDescription() => base.GetDescription() + " + Pearl";
}
