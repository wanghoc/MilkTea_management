using MilkTeaShop.Domain.Interfaces;
using MilkTeaShop.Domain.ValueObjects;
using MilkTeaShop.Domain.Data;

namespace MilkTeaShop.Domain.Entities;

public class OrderItem
{
    public string Id { get; set; } = Guid.NewGuid().ToString();
    public IPriceable Drink { get; set; }
    public SizeOption Size { get; set; } = SizeOption.Medium;
    public int Quantity { get; set; } = 1;
    public string SugarLevel { get; set; } = "100%"; // 0%, 25%, 50%, 75%, 100%
    public string IceLevel { get; set; } = "100%"; // 0%, 25%, 50%, 75%, 100%
    public List<string> Toppings { get; set; } = new();
    public string Description => Drink.GetDescription();
    
    // Property for displaying details in the cart
    public string Details 
    {
        get
        {
            var parts = new List<string>
            {
                $"SL: {Quantity}",
                $"Size: {Size}",
                $"Đường: {SugarLevel}",
                $"Đá: {IceLevel}"
            };
            
            if (Toppings.Any())
            {
                // Calculate and display topping prices for transparency
                decimal toppingTotal = 0;
                var toppingPrices = new List<string>();
                foreach (var topping in Toppings)
                {
                    var toppingItem = StaticMenuData.ToppingItems.FirstOrDefault(t => t.Name == topping);
                    if (toppingItem != null)
                    {
                        toppingTotal += toppingItem.BasePrice;
                        toppingPrices.Add($"{topping} (+{toppingItem.BasePrice:N0}đ)");
                    }
                    else
                    {
                        toppingPrices.Add(topping);
                    }
                }
                parts.Add($"Topping: {string.Join(", ", toppingPrices)} = +{toppingTotal:N0}đ");
            }
            
            return string.Join(" | ", parts);
        }
    }

    public OrderItem(IPriceable drink) => Drink = drink;

    public decimal GetPrice() 
    {
        // Get the price from the decorated drink (this SHOULD include all toppings via decorator pattern)
        var drinkPriceWithToppings = Drink.GetPrice();
        
        // However, if decorator pattern fails, we need a fallback calculation
        // Let's add manual topping calculation as a safety net
        decimal manualToppingPrice = 0;
        if (Toppings?.Any() == true)
        {
            foreach (var toppingName in Toppings)
            {
                var toppingItem = StaticMenuData.ToppingItems.FirstOrDefault(t => t.Name == toppingName);
                if (toppingItem != null)
                {
                    manualToppingPrice += toppingItem.BasePrice;
                }
            }
        }
        
        // Use the higher value between decorator result and manual calculation
        // This ensures toppings are always included in the price
        var finalDrinkPrice = Math.Max(drinkPriceWithToppings, 
            GetBaseDrinkPrice() + manualToppingPrice);
        
        // Apply size adjustment to the final price (including toppings)
        return StaticMenuData.CalculatePriceBySize(finalDrinkPrice, Size);
    }
    
    private decimal GetBaseDrinkPrice()
    {
        // Extract base price from the drink (assuming BaseDrink is at the core)
        if (Drink is BaseDrink baseDrink)
        {
            return baseDrink.BasePrice;
        }
        
        // For decorated drinks, we need to find the base price
        // This is a fallback method to get the original milk tea price
        var drinkDescription = Drink.GetDescription();
        var milkTeaItem = StaticMenuData.MilkTeaItems.FirstOrDefault(m => 
            drinkDescription.Contains(m.Name) || drinkDescription.StartsWith(m.Name));
        
        return milkTeaItem?.BasePrice ?? 35000; // Default fallback price
    }
    
    public decimal LineTotal => GetPrice() * Quantity;
    
    // Additional method to get detailed price breakdown for debugging
    public string GetPriceBreakdown()
    {
        var baseDrinkPrice = GetBaseDrinkPrice();
        var decoratorPrice = Drink.GetPrice();
        var manualToppingPrice = 0m;
        
        if (Toppings?.Any() == true)
        {
            foreach (var toppingName in Toppings)
            {
                var toppingItem = StaticMenuData.ToppingItems.FirstOrDefault(t => t.Name == toppingName);
                if (toppingItem != null)
                {
                    manualToppingPrice += toppingItem.BasePrice;
                }
            }
        }
        
        var finalPrice = GetPrice();
        
        return $"Base: {baseDrinkPrice:N0}đ | Decorator: {decoratorPrice:N0}đ | Manual Toppings: {manualToppingPrice:N0}đ | Final: {finalPrice:N0}đ";
    }
    
    public override string ToString()
    {
        var toppingsText = Toppings.Any() ? $" + {string.Join(", ", Toppings)}" : "";
        var customText = $" (Đường: {SugarLevel}, Đá: {IceLevel})";
        return $"{Quantity}x {Description}{toppingsText} ({Size}){customText} - {LineTotal:N0}đ";
    }
}
