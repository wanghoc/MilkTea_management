<Window x:Class="MilkTeaShop.Presentation.SalesReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Báo cáo Doanh thu - WangHoc Milk Tea" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner" Background="#F0F8FF">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#32CD32" Offset="0"/>
                    <GradientStop Color="#228B22" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" Margin="30,20" HorizontalAlignment="Center">
                <TextBlock Text="📊" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Báo cáo Doanh thu" FontSize="24" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="30 ngày gần nhất" FontSize="16" Style="{StaticResource HeaderTextStyle}" 
                             Opacity="0.8" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="30,0,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock Text="Tổng Doanh thu" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TotalRevenueText" Text="0đ" FontSize="20" FontWeight="Bold" 
                             Foreground="#32CD32" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="5,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="🧾" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock Text="Tổng Đơn hàng" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock x:Name="TotalOrdersText" Text="0" FontSize="20" FontWeight="Bold" 
                             Foreground="#4169E1" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="📈" FontSize="24" HorizontalAlignment="Center"/>
                    <TextBlock Text="Giá trị TB/Đơn" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock x:Name="AvgOrderValueText" Text="0đ" FontSize="20" FontWeight="Bold" 
                             Foreground="#FF6347" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Content -->
        <Grid Grid.Row="2" Margin="30,0,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Daily Sales -->
            <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="📅 Doanh thu theo ngày" FontWeight="Bold" FontSize="16" 
                             Foreground="#2E8B57" Margin="0,0,0,15"/>
                    
                    <ListView x:Name="DailySalesList" ItemsSource="{Binding DailySales}" Height="360"
                             SelectionChanged="DailySalesList_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Ngày" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DateString}" FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Đơn" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OrderCount}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Doanh thu" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RevenueString}" FontWeight="Bold" 
                                                     Foreground="#32CD32" HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
            
            <!-- Receipt Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock x:Name="DetailHeaderText" Text="Chọn ngày để xem chi tiết hóa đơn" 
                             FontWeight="Bold" FontSize="16" Foreground="#2E8B57" Margin="0,0,0,15"/>
                    
                    <ListView ItemsSource="{Binding ReceiptDetails}" Height="360">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Mã HĐ" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ReceiptId}" FontWeight="SemiBold" 
                                                     FontFamily="Consolas"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Thời gian" Width="130">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding PurchaseTime}" FontSize="12"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Món" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ItemsSummary}" FontSize="12" 
                                                     TextWrapping="Wrap" MaxHeight="40"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="SL" Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ItemCount}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Tổng tiền" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Total}" FontWeight="Bold" 
                                                     Foreground="#FF6347" HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="30,20,30,20">
            <Button Content="🔄 Làm mới" Click="Refresh_Click"
                    Background="#4169E1" Foreground="White" 
                    Style="{StaticResource ModernButtonStyle}" Margin="0,0,15,0"/>
            <Button Content="❌ Đóng" Click="Close_Click"
                    Background="#FF6347" Foreground="White" 
                    Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>