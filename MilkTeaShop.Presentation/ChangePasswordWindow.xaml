<Window x:Class="MilkTeaShop.Presentation.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi mật khẩu" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Đổi mật khẩu" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Mật khẩu hiện tại:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="2" x:Name="CurrentPasswordBox" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="3" Text="Mật khẩu mới:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="4" x:Name="NewPasswordBox" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="5" x:Name="MessageText" TextWrapping="Wrap" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Foreground="Red" FontWeight="Medium"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Đổi mật khẩu" Width="100" Height="35" Margin="0,0,10,0"
                    Click="ChangePassword_Click" Background="#32CD32" Foreground="White"
                    FontWeight="Bold"/>
            <Button Content="Hủy" Width="80" Height="35" 
                    Click="Cancel_Click" Background="Gray" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>