<Window x:Class="MilkTeaShop.Presentation.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý người dùng" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ NGƯỜI DÙNG" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid Grid.Row="1" x:Name="UsersDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" CanUserDeleteRows="False" 
                  SelectionMode="Single" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding Username}" Width="120"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="Vai trò" Binding="{Binding Role}" Width="100"/>
                <DataGridCheckBoxColumn Header="Hoạt động" Binding="{Binding IsActive}" Width="80"/>
                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding CreatedDate, StringFormat='dd/MM/yyyy'}" 
                                   Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Đăng nhập cuối" Binding="{Binding LastLoginDate, StringFormat='dd/MM/yyyy HH:mm'}" 
                                   Width="140" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Thêm người dùng" Width="120" Height="35" Margin="0,0,10,0"
                    Click="AddUser_Click" Background="#32CD32" Foreground="White" FontWeight="Bold"/>
            <Button Content="Sửa người dùng" Width="120" Height="35" Margin="0,0,10,0"
                    Click="EditUser_Click" Background="#FF8C00" Foreground="White" FontWeight="Bold"/>
            <Button Content="Xóa người dùng" Width="120" Height="35" Margin="0,0,10,0"
                    Click="DeleteUser_Click" Background="#FF6347" Foreground="White" FontWeight="Bold"/>
            <Button Content="Đóng" Width="80" Height="35" 
                    Click="Close_Click" Background="Gray" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>