                                                            </Condition>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="#E6F3FF"/>
                                                        <Setter Property="BorderBrush" Value="#4169E1"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Topping tab content -->
                    <ScrollViewer Visibility="{Binding SelectedTabIndex, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=1}">
                        <ItemsControl ItemsSource="{Binding ToppingItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#DDD" BorderThickness="1" Margin="8" 
                                            Background="White" CornerRadius="12" Width="140" Height="140"
                                            Cursor="Hand" Effect="{StaticResource CardShadow}">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding DataContext.SelectToppingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <StackPanel Margin="8">
                                            <Border Height="70" CornerRadius="8" Background="#F8F8F8" Margin="0,0,0,5">
                                                <Grid>
                                                    <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}" 
                                                           Stretch="UniformToFill" 
