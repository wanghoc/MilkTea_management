                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ‘‹" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="ChÃ o má»«ng nhÃ¢n viÃªn! Báº¡n cÃ³ thá»ƒ nháº­n Ä‘Æ¡n hÃ ng vÃ  thanh toÃ¡n. Äá»ƒ Ä‘á»•i máº­t kháº©u, nháº¥n nÃºt 'Äá»•i MK' á»Ÿ trÃªn." 
                                   FontSize="14" Foreground="#4169E1" FontWeight="Medium" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!-- Tab Control -->
                <Border Grid.Row="2" CornerRadius="10" Background="#F5F5F5" Padding="5" Margin="0,0,0,15">
                    <TabControl SelectedIndex="{Binding SelectedTabIndex}" Background="Transparent" BorderThickness="0">
