        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#F0F8FF">
    
    <Window.Resources>
        <!-- Define proper DropShadow effect -->
        <DropShadowEffect x:Key="WindowShadow" Color="Gray" Direction="315" ShadowDepth="3" Opacity="0.2"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
