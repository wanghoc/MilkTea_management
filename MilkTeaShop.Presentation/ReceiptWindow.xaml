                         HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Receipt Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="15" Margin="20,0,20,20" 
                Padding="20" Effect="{StaticResource WindowShadow}">
            <ScrollViewer>
                <TextBox Text="{Binding ReceiptText, Mode=OneWay}" 
                         IsReadOnly="True" 
                         Background="Transparent"
                         BorderThickness="0"
